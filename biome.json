{
	"$schema": "https://biomejs.dev/schemas/2.0.0/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [
							":PACKAGE:",
							":BLANK_LINE:",
							["chrome://**", "moz-src://**", "resource://**"],
							":BLANK_LINE:",
							":ALIAS:",
							":BLANK_LINE:",
							":PATH:"
						]
					}
				},
				"useSortedKeys": "on"
			}
		}
	},
	"linter": {
		"rules": {
			"style": {
				"noDescendingSpecificity": "off",
				"useEnumInitializers": "off"
			},
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	}
}
